at(X,Y, 0) :- start(X,Y), solid(X,Y).
at(NX,NY, T+1) :-
	at(X,Y, T),
	T < length,
	solid(NX,NY),
	step(DX,DY),
	NX = X + DX,
	NY = Y + DY,
	solid(NX,NY).

complete :- finish(X,Y), reachable(X,Y).
